pipeline {
  agent any

  tools {
    nodejs "node"
  }

  stages {
    stage('install') {
      steps {
        git branch: 'prueba-hook', url: 'https://github.com/camilosotog/corral.git'
        dir('back') {
          bat 'npm install'
        }
      }
    }

    stage('test') {
      steps {
        dir('back') {
          bat 'npm test'
        }
      }
    }
  }
}
