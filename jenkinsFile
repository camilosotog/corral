pipeline {
  agent any

  tools {
    nodejs "node"
  }

  stages {
    stage('Install') {
      steps {
        git branch: 'main', url: 'https://github.com/camilosotog/corral.git'

        dir('back') {
          bat 'npm install'
        }
      }
    }

    stage('Test') {
      steps {
        dir('back') {
          bat 'npm test'
        }
      }
    }
  }
}
